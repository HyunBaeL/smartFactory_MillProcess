<Page x:Class="smartFactory_MillProcess.Views.LoginUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginUser"
      Background="#2C3E50">

    <!-- 바깥쪽 둥근 테두리 -->
    <Border Background="#2b2f3a"
            BorderBrush="#00c2ff"
            BorderThickness="1"
            CornerRadius="8"
            SnapsToDevicePixels="True"
            Padding="0"
            Margin="0">
        <!-- Grid: 상단바 40px + 나머지 영역 -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- 상단바 높이 -->
                <RowDefinition Height="*"/>
                <!-- 로그인 영역(가변) -->
            </Grid.RowDefinitions>

            <!-- ============================= -->
            <!-- 1. 상단바 (Row 0) -->
            <!-- ============================= -->
            <DockPanel Grid.Row="0"
                       Background="#2C3E50"
                       LastChildFill="False"  
                       MouseDown="TitleBar_MouseDown" Margin="1,1,0,0">
                <!-- 버튼들을 오른쪽에 정렬하기 위한 StackPanel -->
                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <!-- 최소화 버튼 -->
                    <Button Content="─"
                            Width="40" Height="30"
                            Margin="3,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontSize="14"
                            FontWeight="Bold"
                            Command="{Binding MinimizeWindowCommand}"
                            Cursor="Hand"/>
                    <!-- 최대화/복원 버튼 -->
                    <Button Content="▭"
                            Width="40" Height="30"
                            Margin="2,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontSize="14"
                            FontWeight="Bold"
                            Command="{Binding MaximizeRestoreWindowCommand}"
                            Cursor="Hand"/>
                    <!-- 닫기 버튼 -->
                    <Button Content="X"
                            Width="40" Height="30"
                            Margin="2,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="Bold"
                            FontSize="16"
                            Command="{Binding CloseWindowCommand}"
                            Cursor="Hand"/>
                </StackPanel>
            </DockPanel>


            <!-- ============================= -->
            <!-- 2. 로그인 UI (Row 1) -->
            <!-- ============================= -->
            <Grid Grid.Row="1">
                <Border Width="430"
                        Height="340"
                        Padding="30"
                        CornerRadius="8"
                        Background="#2b2f3a"
                        BorderBrush="#00c2ff"
                        BorderThickness="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="15"
                                          ShadowDepth="0"
                                          Opacity="0.5" />
                    </Border.Effect>

                    <StackPanel>
                        <!-- 타이틀 -->
                        <TextBlock Text="압연 공정 시뮬레이터"
                                   Foreground="#00c2ff"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,25"/>

                        <!-- ID 입력 -->
                        <TextBlock Text="ID"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                                 Height="30"
                                 Padding="5"
                                 Background="#1b1f2b"
                                 Foreground="White"
                                 BorderBrush="#00c2ff"
                                 BorderThickness="1"
                                 Margin="0,0,0,15"/>

                        <!-- Password 입력 -->
                        <TextBlock Text="Password"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"
                                     Height="30"
                                     Padding="5"
                                     Background="#1b1f2b"
                                     Foreground="White"
                                     BorderBrush="#00c2ff"
                                     BorderThickness="1"
                                     Margin="0,0,0,25"/>

                        <!-- 로그인 버튼 -->
                        <Button Content="LOGIN"
                                Cursor="Hand"
                                Height="35"
                                Background="#00c2ff"
                                Foreground="#1b1f2b"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Command="{Binding LoginCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>
