<Page x:Class="smartFactory_MillProcess.Views.ProcessMainConductor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:smartFactory_MillProcess.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProcessMainConductor">
    <Border Width="1200" Height="600" CornerRadius="8"
        Background="#2b2f3a"
    BorderBrush="#00c2ff" BorderThickness="1"
    HorizontalAlignment="Center" VerticalAlignment="Center">

        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.5" />
        </Border.Effect>

        <Grid Height="300" Width="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 제목 -->
            <TextBlock Grid.Row="0"
                   Text="Main Control"
                   Foreground="#00c2ff" 
                   FontSize="20" FontWeight="SemiBold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,50"/>
            <!-- 이미지 -->
            <Image x:Name="imgMachine" Width="600" Height="200" Source="pack://application:,,,/resource/machine5.png" Margin="0,40,0,60"/>

            <!-- 버튼 라벨 -->
            <TextBlock Text="가열로" Foreground="#00c2ff"  FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="150,280,0,-50"/>
            <TextBlock Text="압연기" Foreground="#00c2ff" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,280,150,-50" />
            
                <!-- 버튼 -->
            <Border Width="80" Height="35" CornerRadius="8" Background="#00c2ff" Cursor="Hand" Margin="260,300,0,-40">
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding RollStatusViewCommand}" />
                </Border.InputBindings>
                <TextBlock Text="현재 상태" Foreground="#1b1f2b" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            
                

                <Border Width="80" Height="35" CornerRadius="8" Background="#00c2ff" Cursor="Hand" Margin="130,300,390,-40">
                <Border.InputBindings>
                    <MouseBinding Gesture="LeftClick" Command="{Binding FurnaceStatusViewCommand}" />
                </Border.InputBindings>
                <TextBlock Text="현재 상태" Foreground="#1b1f2b" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <ProgressBar x:Name="FurnacePercent" Minimum="0" Maximum="100" Height="7" Width="100" Value="{Binding FurnacePercent}" Margin="120,345,380,-60"/>
            <ProgressBar x:Name="RollPercent" Minimum="0" Maximum="100" Grid.Row="1" Height="7" Width="100" Value="0" Margin="260,345,0, -60"/>
        </Grid>
    </Border>
</Page>