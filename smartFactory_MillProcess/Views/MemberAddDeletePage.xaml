<Page x:Class="smartFactory_MillProcess.Views.MemberAddDeletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="428" d:DesignWidth="450"
      Title="LoginUser"
      Background="Transparent">

    <Border Background="#2b2f3a" CornerRadius="8" BorderBrush="#FF16A085" BorderThickness="1" SnapsToDevicePixels="True" Padding="0" Margin="0">
        <Grid>
            <Border Width="450" Padding="30" CornerRadius="8"
                Background="#2b2f3a"
                BorderBrush="#00c2ff" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="428">

                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.5" />
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="회원 등록/삭제" 
                           Foreground="#00c2ff" 
                           FontSize="26" FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,0"/>

                    <!-- 아이디 -->
                    <TextBlock Text="ID" Foreground="White" Margin="0,0,0,0"/>
                    <TextBox Text=""
                         Height="30" Padding="5" 
                         Background="#1b1f2b" Foreground="White"
                         BorderBrush="#00c2ff" BorderThickness="1" 
                         Margin="0,0,0,5"/>

                    <!-- 비밀번호 -->
                    <TextBlock Text="Password" Foreground="White" Margin="0,0,0,0"/>
                    <TextBox Text=""
                         Height="30" Padding="5"
                         Background="#1b1f2b" Foreground="White"
                         BorderBrush="#00c2ff" BorderThickness="1" 
                         Margin="0,0,0,5"/>

                    <TextBlock Text="이름" Foreground="White" Margin="0,0,0,0"/>
                    <TextBox Text=""
                         Height="30" Padding="5" 
                         Background="#1b1f2b" Foreground="White"
                         BorderBrush="#00c2ff" BorderThickness="1" 
                         Margin="0,0,0,5"/>

                    <TextBlock Text="전화번호" Foreground="White" Margin="0,0,0,0"/>
                    <TextBox Text=""
                         Height="30" Padding="5" 
                         Background="#1b1f2b" Foreground="White"
                         BorderBrush="#00c2ff" BorderThickness="1" 
                         Margin="0,0,0,5"/>

                    <TextBlock Text="주소" Foreground="White" Margin="0,0,0,0"/>
                    <TextBox Text=""
                         Height="30" Padding="5" 
                         Background="#1b1f2b" Foreground="White"
                         BorderBrush="#00c2ff" BorderThickness="1" 
                         Margin="0,0,0,20"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                            
                    <!-- 로그인 버튼 -->
                        <Button Content="등록"
                            Grid.Column="0"
                        Height="35"
                            Width="195"
                        Background="#00c2ff" Foreground="#1b1f2b"
                        FontWeight="Bold"
                        BorderThickness="0"
                        
                        Command="">
                            
                        </Button>
                        <Button Content="삭제"
                        Grid.Column="1"
                        Height="35"
                        Width="190"
                                Margin="5,0,0,0"
                        Background="#00c2ff" Foreground="#1b1f2b"
                        FontWeight="Bold"
                        BorderThickness="0"
    
                        Command=""/>  
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Page>
