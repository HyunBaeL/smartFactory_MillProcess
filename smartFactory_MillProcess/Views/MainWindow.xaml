<Window x:Class="smartFactory_MillProcess.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:smartFactory_MillProcess"
        mc:Ignorable="d"
        Title="Mill Process" 
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" /> <!-- bool 타입 처리 -->
    </Window.Resources>
    
            <Grid>
                <DockPanel LastChildFill="True">
                    <!-- 상단 고정 바 -->
            <Grid DockPanel.Dock="Top" Height="40" Background="#1ABC9C" Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVis}}" MouseDown="TitleBar_MouseDown">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Ellipse Margin="6,10,0,0" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Resource/dog.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Margin="20,10,20,0" FontSize="12" Text="{Binding LoginViewModel.Name}" 
                                   Width="80" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Margin="5,10,0,0" FontSize="12" Text="{Binding LoginViewModel.Department}" 
                                   Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Margin="5,10,0,0" FontSize="12" Text="{Binding LoginViewModel.Position}" 
                                   Width="100" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>

                <Button Grid.Column="5" Content="X"
                        Width="30" Height="30" Margin="5"
                        Background="Transparent" Foreground="White" BorderBrush="Transparent"
                        FontWeight="Bold" FontSize="16"
                        Command="{Binding CloseWindowCommand}"
                        Cursor="Hand" />
                <!-- 최소화 버튼 -->
                <Button Grid.Column="3" Content="─"
                        Width="40" Height="30" Margin="2"
                        Background="Transparent" Foreground="White" BorderBrush="Transparent"
                        FontSize="14" FontWeight="Bold"
                        Command="{Binding MinimizeWindowCommand}"
                        Cursor="Hand"/> 

                <!-- 최대화/복원 버튼 -->
                <Button Grid.Column="4" Content="▭"
                        Width="40" Height="30" Margin="2"
                        Background="Transparent" Foreground="White" BorderBrush="Transparent"
                        FontSize="14" FontWeight="Bold"
                        Command="{Binding MaximizeRestoreWindowCommand}"
                        Cursor="Hand"/>
            </Grid>

                    <!-- 왼쪽 고정 메뉴바 -->
                    <StackPanel DockPanel.Dock="Left" 
                            Width="100"
                            Background="#2C3E50"
                            Visibility="{Binding IsMenuOpen, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Menu" 
                               Foreground="#00c2ff" 
                               FontWeight="Bold" 
                               FontSize="18" 
                               Margin="10"
                               HorizontalAlignment="Center"/>

                <Button Content="대시보드" 
                        Cursor="Hand"
                            Command="{Binding MoveMainDashboardCommand}"
                            Margin="10" 
                            Padding="5"
                            Background="#34495E" 
                            Foreground="White" 
                            BorderBrush="Transparent"/>
                        <Button Content="사원 관리"
                                Cursor="Hand"
                            Command="{Binding MoveEmployeeManagementCommand}"
                            Margin="10" 
                            Padding="5"
                            Background="#34495E" 
                            Foreground="White" 
                            BorderBrush="Transparent"/>
                        <Button Content="뒤로가기"
                                Cursor="Hand"
                            Command="{Binding GoBackCommand}"
                            Margin="10" 
                            Padding="5"
                            Background="#34495E" 
                            Foreground="White" 
                            BorderBrush="Transparent"/>
                        <Button Content="로그 아웃"
                                Cursor="Hand"
                            Command="{Binding LogoutCommand}"
                            Margin="10" 
                            Padding="5"
                            Background="#E74C3C" 
                            Foreground="White" 
                            BorderBrush="Transparent"/>
                    </StackPanel>

                    <!-- 메인 화면 -->
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                </DockPanel>
            </Grid>

        

</Window>
